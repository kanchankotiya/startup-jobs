<div class="container mt-5">
  <div class="row">
    <div class= "col-md-6 mx-md-auto">
      <div class="card">
        <div class="card-header">
         <h2 class="text-center">Change your password</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="field">
              <%= f.label :password, "New password" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <div class="form-group">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control mt-2" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit "Change my password", class: 'btn btn-dark w-100' %>
            </div>
            <% end %>
            <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-success w-100 mt-3' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-primary w-100 mt-3' %>
        </div>
      </div>
  </div>
</div>

